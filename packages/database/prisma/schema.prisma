datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
}

model Card {
  oracleId   String     @id @unique
  name       String
  manaCost   String?
  typeLine   String
  oracleText String?
  colors     String[]
  legalities Legality[]
  printings  Printing[]
}

model Printing {
  oracleId        String
  setCode         String
  releasedAt      DateTime
  collectorNumber String
  rarity          String
  imageUrl        String
  usd             Decimal?
  usdFoil         Decimal?
  usdEtched       Decimal?
  eur             Decimal?
  eurFoil         Decimal?
  tix             Decimal?
  card            Card     @relation(fields: [oracleId], references: [oracleId], onDelete: Cascade)

  @@unique([oracleId, setCode, collectorNumber])
}

model Legality {
  oracleId String
  format   String
  legal    Boolean
  card     Card    @relation(fields: [oracleId], references: [oracleId], onDelete: Cascade)

  @@unique([oracleId, format])
}

model ScryfallMeta {
  key   String @id
  value String
}
